<!-- views/editJournal.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Edit Journal Entry</title>
</head>
<body>
    <h1>Edit Journal: <%= journal.title %></h1>
    <form action="/journal/edit/<%= journal._id %>" method="POST">
        <label for="title">Title</label>
        <input type="text" id="title" name="title" value="<%= journal.title %>" required>
        
        <label for="content">Content</label>
        <textarea id="content" name="content" required><%= journal.content %></textarea>
        
        <button type="submit">Update</button>
    </form>
    <a href="/dashboard">Back to Dashboard</a>
</body>
</html>
